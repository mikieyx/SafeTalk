generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  phone_number String @id @map("_id")
  
  emergency_sending EmergencyContact[] @relation(name: "sending")
  emergency_receiving EmergencyContact[] @relation(name: "receiving")
  
}

model EmergencyContact {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String

  sender User @relation(name: "sending", fields: [sender_phone_number], references: [phone_number])
  sender_phone_number String
  receiver User @relation(name: "receiving", fields: [receiver_phone_number], references: [phone_number])
  receiver_phone_number String
}