generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  phone_number String @id @map("_id")

  emergency_sending   EmergencyContact[] @relation(name: "sending")
  emergency_receiving EmergencyContact[] @relation(name: "receiving")

  assistants Assistant[]

  calls Call[]
}

model EmergencyContact {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String

  sender                User   @relation(name: "sending", fields: [sender_phone_number], references: [phone_number])
  sender_phone_number   String
  receiver              User   @relation(name: "receiving", fields: [receiver_phone_number], references: [phone_number])
  receiver_phone_number String
}

model Assistant {
  id                 String @id @default(auto()) @map("_id") @db.ObjectId
  description        String
  conversation_topic String

  user              User   @relation(fields: [user_phone_number], references: [phone_number])
  user_phone_number String
}

model Call {
  id String @id @map("_id")

  user              User   @relation(fields: [user_phone_number], references: [phone_number])
  user_phone_number String

  start_time DateTime
  end_time   DateTime?

  authorities_notified Boolean @default(false)
  contacts_notified    Boolean @default(false)
}
